{
  "name": "zaks Bookmarks",
  "version": "3.0",
  "manifest_version": 2,
  "description": "Store private bookmarks encrypted in Chrome's local storage.",
  "background": {
    "scripts": ["/js/background.js", "/vendor/openpgpjs/openpgp.min.js"],
    "persistent": false
  },
  "icons": {
    "128": "/img/icon128.png"
  },
  "browser_action": {
    "name": "Open bookmarks."
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "js/inject.js"
      ]
    }
  ]
}
